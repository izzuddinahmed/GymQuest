<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@color/cream_background">

    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gym Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">
        <RatingBar
            android:id="@+id/rbAverageRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:rating="0"
            android:progressTint="#FFC107"
            android:isIndicator="true"/>
        <TextView
            android:id="@+id/tvAverageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0 (0 reviews)"
            android:textSize="14sp"
            android:textColor="@color/dark_green"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="10dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnAddPhoto"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="+ Add Photo to Gallery"
        android:backgroundTint="#673AB7"
        android:textSize="12sp"
        android:layout_gravity="end"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No description available."
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnEditDesc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Edit Description (Admin)"
        android:backgroundTint="#607D8B"
        android:visibility="gone"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/btnEditPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Update Phone (Admin)"
        android:backgroundTint="#607D8B"
        android:visibility="gone"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btnNavigate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Navigate"
            android:backgroundTint="@color/accent_orange"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnContactUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Call"
            android:backgroundTint="#0288D1"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Reviews:"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReviews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnWriteReview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Review"
            android:backgroundTint="@color/sage_green"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:backgroundTint="@color/dark_green"/>
    </LinearLayout>

</LinearLayout>